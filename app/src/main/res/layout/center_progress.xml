<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/volume_layout"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/center_progress_bg"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/player_volume_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/center_player_volume" />

        <TextView
            android:id="@+id/volume_percentage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_volume_iv"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="80%"
            android:textColor="#ffececec" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bright_layout"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/center_progress_bg"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/player_bright_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/center_player_bright" />

        <TextView
            android:id="@+id/bright_percentage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_bright_iv"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:textColor="#ffececec" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/center_progress_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/progress_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/center_player_backward" />

        <TextView
            android:id="@+id/progress_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_time_iv"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:text="00:35/24:89"
            android:textColor="#ffececec" />
    </RelativeLayout>

</RelativeLayout>